{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
table, tr, th, td {
    border: 1px solid black;
}

.accordion {
  background-color: #eee;
  color: #444;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  text-align: left;
  border: none;
  outline: none;
  transition: 0.4s;
}

.active, .accordion:hover {
  background-color: #ccc;
}

.panel {
  padding: 0 18px;
  background-color: white;
  display: none;
  overflow: hidden;
}

#back_to_tweet {
    display: none;
    position: fixed;
    left: 90%;
    top: 50%;
}

#back_to_tweet button {
    width: 150px;
    height: 70px;
    background-color: blue;
    border-radius: 20px;
    font-size: 30px;
    color: white;
    cursor: pointer;
}

#scrollToTop {
    position: fixed;
    width: 30px;
    height: 30px;
    background-color: lightgrey;
    text-align: center;
    font-size: 38px;
    color: white;
    left: 97%;
    top: 90%;
    display: none;
    cursor: pointer;
}

.link_user:hover{
    text-decoration: underline;
    cursor: pointer;
}
</style>
<div id="scrollToTop" onclick="window.scrollTo(0,0);">^</div>
<button class="accordion" id="accordion_users">Utilisateurs</button>
<div class="panel">
    <table>
    <thead>
    <tr>
    <th>Id</th>
    <th>Pseudo</th>
    <th>Password</th>
    <th>Profil_pic</th>
    <th>Description</th>
    <th>Suivis</th>
    <th>Likes</th>
    </thead>
    <tbody>
    {% for user in users %}
    <tr id="{{ user.id }}">
    <td> {{ user.id }} </td>
    <td> {{ user.pseudo }} </td>
    <td> {{ user.password }} </td>
    <td>
        {% if user.profil_pic %}
            <img src="http://api.local/{{ user.profil_pic }}" width="70" alt="pic">
        {% else %}
            <img src="http://api.local/media/default.png" width="70" alt="pic">
        {% endif %}
    </td>
    <td> {{ user.description }} </td>
    <td> {{ user.suivis }} </td>
    <td> {{ user.likes }} </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
    <div id="back_to_tweet">
        <button>Retourner au tweet</button>
    </div>
</div>

<button class="accordion" id="accordion_tweets">Tweets</button>
<div class="panel">
    <table>
    <thead>
    <tr>
    <th>Id</th>
    <th>Utilisateur</th>
    <th>DateHeure</th>
    <th>Message</th>
    <th>Media</th>
    </tr>
    </thead>
    <tbody>
        {% for tweet in tweets %}
            <tr id="{{ tweet.id }}">
                <td> {{ tweet.id }} </td>
                <td> <a class="link_user" onclick="show_user({{ tweet.user }}, {{ tweet.id }})">{{ tweet.user }}</a> </td>
                <td> {{ tweet.dateheure.date | format_datetime(locale='fr') }} </td>
                <td> {{ tweet.message }} </td>
                <td>
                    {% if tweet.media %}
                        <img src="http://api.local/{{ tweet.media }}" width="70" alt="pic">
                    {% else %}
                        Aucun media
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
    </table>
</div>

<script>

var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}

document.addEventListener('scroll', () => {
    document.getElementById('scrollToTop').style.display = 'block';
})

async function show_user(user_id, tweet_id) {
    document.getElementById('accordion_users').click();
    document.getElementById(user_id).scrollIntoView();
    document.getElementById(user_id).style.backgroundColor = 'green';
    await sleep(1500);
    document.getElementById(user_id).style.backgroundColor = 'transparent';
    document.querySelector('#back_to_tweet button').setAttribute('onclick', 'show_tweet(' + tweet_id + ')');
    document.getElementById('back_to_tweet').style.display = 'block';
}

async function show_tweet(tweet_id) {
    document.getElementById('accordion_users').click();
    document.getElementById(tweet_id).scrollIntoView();
    document.getElementById(tweet_id).style.backgroundColor = 'lightgrey';
    await sleep(1500);
    document.getElementById(tweet_id).style.backgroundColor = 'transparent';
}

function sleep(ms) {
    return new Promise(resolve => setTimeout(resolve, ms));
}
</script>

{% endblock %}
