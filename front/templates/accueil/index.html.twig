{% extends 'base.html.twig' %}

{% block title %}RSOnyx{% endblock %}

{% block body %}

<style>

div{
    margin: 10px;
}

.liste_users{
    width: 20vw;
    height: 75vh;
    overflow-y: scroll;
}

.liste_users ul{
    list-style-type: none;
}

.tweets{
    width: 70vw;
    height: 75vh;
    overflow-y: scroll;
}

.t_user{
    display: flex;
}

.content{
    display: flex;
    justify-content: space-around;
}

.post{
    height: 5vh;
    display: flex;
    margin-left: 12%;
    margin-top: 30px;
}

.post textarea{
    height: 4.5vh;
    width: 60vw;
}

.post input[type="file"]{
    position: absolute;
    margin-top: 15px;
    margin-left: 10px;
}

.post button{
    margin-left: 250px;
    border: none;
    background-color: transparent;
    cursor: pointer;
    position: absolute;
    margin-top: 5px;
}

.card{
    border: 1px solid black;
}

.space{
    width: 30px;
}

</style>

{{ render('/header') }}

<div class="container">

    <div class="content">

        <div class="liste_users">
            <ul>
                <li><h2>Liste des utilisateurs</h2></li>
                {% for user in users %}
                    <li>{{ user.pseudo }} (<a href="#">Envoyer un message</a>)</li>
                {% endfor %}
            </ul>
        </div>

        <div class="tweets">
            {% for tweet in tweets %}
                <div class="card">
                    <div class="t_user">
                        {% for user in users %}
                            {% if user.id == tweet.user %}
                                {% if user.profil_pic %}
                                    <img src="http://localhost/php_avance/api/public/{{ user.profil_pic }}" alt="user" width="40" height="40">
                                {% else %}
                                    <img src="http://localhost/php_avance/api/public/media/default.png" alt="user" width="40" height="40">
                                {% endif %}
                                <p>{{ user.pseudo }}</p>
                                <button style="height: 20px; border: none; background-color: transparent; margin-top: 10px; font-size: 25px; color: blue; cursor: pointer">+</button>
                                <span class="space"></span>
                                <p>{{ tweet.dateheure.date | format_datetime(pattern='HH:mm:ss dd/MM/yyyy') }}</p>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="t_contenu">
                        <code>
                            {{ tweet.message }}
                        </code>
                        <br>
                        {% if tweet.media %}
                            <img src="http://localhost/php_avance/front/public/{{ tweet.media }}" alt="img" width="150">
                        {% endif %}
                    </div>
                    <div class="actions">
                        <button style="border: none; background-color: transparent; font-size: 35px; color: grey; cursor: pointer;">â™¥</button>
                        <button style="border: none; background-color: transparent; font-size: 35px; color: blue; cursor: pointer;">ðŸ—¨</button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="post">
        <form method="post" enctype="multipart/form-data">
            <textarea placeholder="Votre message..." id="message" name="message" required></textarea>
            <input type="file" id="media" name="media">
            <button type="submit" id='send_message' name="send_message"><img src="http://localhost/php_avance/front/public/media/send.png" alt="Envoyer" width="40"></button>
        </form>
    </div>

</div>

{% endblock %}
